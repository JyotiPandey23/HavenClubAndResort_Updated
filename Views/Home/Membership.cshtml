<script>
       // Select all cards
    const cards = document.querySelectorAll('.card');

    cards.forEach(card => {
        const cardBody = card.querySelector('.card-body'); // Select the card body within the current card

        card.addEventListener('mouseover', function() {
            cardBody.style.display = 'block'; // Show the card body on hover
        });

        card.addEventListener('mouseout', function() {
            cardBody.style.display = 'none'; // Hide the card body when not hovering
        });
    });
</script>